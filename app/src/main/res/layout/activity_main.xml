<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:layoutDirection="ltr"
    tools:context=".ui.Activitys.MainActivity.MainActivity"
    android:orientation="vertical">


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/main_appbar"
            layout="@layout/my_appbar_layout" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/main_taps_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:tabIndicatorColor="@color/colorWhite"
            app:tabInlineLabel="true"
            app:tabRippleColor="@color/colorAccent"
            app:tabSelectedTextColor="@color/colorWhite"
            app:tabTextColor="#80EEEEEE">

        </com.google.android.material.tabs.TabLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.viewpager.widget.ViewPager
            android:id="@+id/main_tabs_view_page"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <com.github.clans.fab.FloatingActionMenu
            android:id="@+id/main_floating_action_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_gravity="bottom|right"
            android:background="@color/transparent"
            app:menu_fab_label=""
            app:menu_labels_showShadow="true"
            app:menu_openDirection="up"
            app:menu_showShadow="true"
            app:menu_colorNormal="@color/colorPrimary"
            app:menu_colorPressed="@color/ligth_black"
            app:menu_colorRipple="@color/colorAccent"
            app:menu_labels_showAnimation="@anim/fab_slide_in_from_right"
            app:menu_fab_show_animation="@anim/fab_scale_down"

            >

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/main_item_floating_action_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fab_label="Create group"
                android:src="@drawable/group"
                app:fab_colorNormal="@color/colorPrimary"
                app:fab_colorPressed="@color/ligth_black"
                app:fab_colorRipple="@color/colorAccent"
                app:fab_size="mini"
                app:fab_showShadow="true"
                app:fab_showAnimation="@anim/fab_scale_up"
                />

        </com.github.clans.fab.FloatingActionMenu>

    </FrameLayout>




</LinearLayout>