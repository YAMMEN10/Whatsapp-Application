<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:layoutDirection="ltr">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <xyz.schwaab.avvylib.AvatarView
            android:id="@+id/find_friend_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/default_image"
            app:avvy_border_color="#262B33"
            app:avvy_border_highlight_color="@color/colorTransparent"
            app:avvy_border_thickness="0dp"
            app:avvy_border_thickness_highlight="0dp"
            app:avvy_distance_to_border="0dp"
            app:avvy_highlighted="true"
            app:avvy_loading_arches="5"
            app:avvy_loading_arches_degree_area="90"
            app:avvy_middle_color="@color/colorTransparent" />

        <xyz.schwaab.avvylib.AvatarView
            android:id="@+id/find_friend_online"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="bottom|right"
            android:src="@drawable/online"
            app:avvy_border_color="#262B33"
            app:avvy_border_highlight_color="@color/colorAccent"
            app:avvy_border_thickness="0dp"
            app:avvy_border_thickness_highlight="0dp"
            app:avvy_distance_to_border="0dp"
            app:avvy_highlighted="true"
            app:avvy_loading_arches="5"
            app:avvy_loading_arches_degree_area="90"
            app:avvy_middle_color="@color/colorTransparent" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/find_friend_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:ellipsize="end"
                android:gravity="center|start"
                android:maxLines="1"
                android:paddingLeft="10dp"
                android:text="Username"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textAppearance="?attr/textAppearanceBody2"
                android:textColor="?android:attr/textColorSecondary"
                android:textDirection="ltr"
                android:textStyle="bold"
                android:textSize="15dp">

            </androidx.appcompat.widget.AppCompatTextView>


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/find_friend_status"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:ellipsize="end"
                android:gravity="center|start"
                android:maxLines="1"
                android:paddingLeft="10dp"
                android:text="status"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textAppearance="?attr/textAppearanceBody2"
                android:textColor="?android:attr/textColorSecondary"
                android:textDirection="ltr"
                android:textSize="11dp" />




    </LinearLayout>


</LinearLayout>